<div id="line-item" class="row-fluid">
    <div class="item-num grey-gloss">
        {{forPurchaseCount}} item(s) for purchase
    </div>
    {{#each items}}
    <div class="row-fluid cart-items">
        <div id="cart-item-image" class="span4">
            <img src="{{image}}" />
        </div>
        <div class="span4">
            <div id="cart-prod-title" class="row-fluid">
                {{{name}}}
            </div>
            <div class="row-fluid">
                <a  itemtosave="{{id}}" href="#" class="save-for-later">Save For Later</a>&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="#" itemtoremove="{{id}}" class="remove-from-cart">Remove</a>
            </div>
        </div>
        <div id="cart-qty" class="span2">
            <form>
                <fieldset>
                    <p>
                        <label>Quantity</label>
                        <input type="text"
                               id="cart-qty-input"
                               value="{{qty}}"/>
                    </p>
                </fieldset>
            </form>
        </div>
        <div class="span2 cart-item-price">
            ${{price}}
        </div>
    </div>
    {{/each}}

</div>
<div id="saved-item" class="row-fluid">
<div class="item-num grey-gloss">
    {{savedItemsCount}} Saved Item(s)
</div>
{{#each savedItems}}
<div class="row-fluid cart-items">
    <div id="saved-item-img" class="span4">
        <img src="{{image}}"/>
    </div>
    <div class="span4">
        <div id="cart-prod-title" class="row-fluid">
            {{{name}}}
        </div>
        <div class="row-fluid">
        <a href="#" itemtomove="{{id}}" class="move-to-cart">Move To Cart</a>&nbsp;&nbsp;&nbsp;&nbsp;
        <a href="#" itemtoremove="{{id}}" class="remove-from-cart remove-from-saved">Remove</a>
        </div>
    </div>
    <div class="span2 qty-text">
        Quantity: {{qty}}
    </div>
    <div class="span2 cart-item-price">
        ${{price}}
    </div>
</div>
</div>
{{/each}}
